        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/profile_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="14sp"
                    android:padding="20dp"
                    android:drawablePadding="10dp"
                    android:background="?attr/selectableItemBackground"
                    android:focusable="true"
                    android:clickable="true"
                    android:textColor="@color/color_black_424242"
                    android:drawableStart="@drawable/ic_profile_icon"
                    android:drawableEnd="@drawable/ic_forward_arrow_grey"
                    android:text="@string/profile_label" />

                <View
                    android:id="@+id/first_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_label"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/list_divider_line" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/contact_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/first_divider"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="14sp"
                    android:padding="20dp"
                    android:drawablePadding="10dp"
                    android:background="?attr/selectableItemBackground"
                    android:focusable="true"
                    android:clickable="true"
                    android:textColor="@color/color_black_424242"
                    android:drawableStart="@drawable/ic_contact_icon"
                    android:drawableEnd="@drawable/ic_forward_arrow_grey"
                    android:text="@string/contact_us_label" />

                <View
                    android:id="@+id/second_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/contact_label"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/list_divider_line" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/faq_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/second_divider"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="14sp"
                    android:padding="20dp"
                    android:drawablePadding="10dp"
                    android:background="?attr/selectableItemBackground"
                    android:focusable="true"
                    android:clickable="true"
                    android:textColor="@color/color_black_424242"
                    android:drawableStart="@drawable/ic_faq_icon"
                    android:drawableEnd="@drawable/ic_forward_arrow_grey"
                    android:text="@string/faq_label" />

                <View
                    android:id="@+id/third_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/faq_label"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/list_divider_line" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/settings_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/third_divider"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="14sp"
                    android:padding="20dp"
                    android:drawablePadding="10dp"
                    android:background="?attr/selectableItemBackground"
                    android:focusable="true"
                    android:clickable="true"
                    android:textColor="@color/color_black_424242"
                    android:drawableStart="@drawable/ic_settings_icon"
                    android:drawableEnd="@drawable/ic_forward_arrow_grey"
                    android:text="@string/settings_label" />

                <View
                    android:id="@+id/fourth_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/settings_label"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/list_divider_line" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/terms_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/fourth_divider"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="14sp"
                    android:padding="20dp"
                    android:drawablePadding="10dp"
                    android:background="?attr/selectableItemBackground"
                    android:focusable="true"
                    android:clickable="true"
                    android:textColor="@color/color_black_424242"
                    android:drawableStart="@drawable/ic_terms_icon"
                    android:drawableEnd="@drawable/ic_forward_arrow_grey"
                    android:text="@string/terms_and_conditions_label" />

                <View
                    android:id="@+id/fifth_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/terms_label"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/list_divider_line" />

                <androidx.appcompat.widget.AppCompatTextView
                     android:id="@+id/sign_out"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     app:layout_constraintTop_toBottomOf="@+id/fifth_divider"
                     app:layout_constraintRight_toRightOf="parent"
                     app:layout_constraintLeft_toLeftOf="parent"
                     android:textSize="14sp"
                     android:padding="20dp"
                     android:drawablePadding="10dp"
                     android:background="?attr/selectableItemBackground"
                     android:focusable="true"
                     android:clickable="true"
                     android:textColor="@color/color_black_424242"
                     android:drawableStart="@drawable/round_logout_24"
                     android:drawableEnd="@drawable/ic_forward_arrow_grey"
                     android:text="SIGN OUT"
                     />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

<!--    </com.google.android.material.card.MaterialCardView>-->


</androidx.coordinatorlayout.widget.CoordinatorLayout>