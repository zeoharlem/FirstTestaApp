<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="1dp"
        android:left="20dp"
        android:right="20dp"
        android:top="1dp">
        <rotate
            android:drawable="@color/colorAccent"
            android:fromDegrees="180"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="180"
            android:visible="true">
            <shape android:shape="rectangle">
                <size
                    android:width="100dp"
                    android:height="10dp"></size>

                <corners
                    android:topLeftRadius="74dp"
                    android:topRightRadius="74dp"></corners>
                <stroke
                    android:width="1px"
                    android:color="#1AD70022" />
                <solid android:color="#1AD70022" />
            </shape>
        </rotate>
    </item>

</layer-list>